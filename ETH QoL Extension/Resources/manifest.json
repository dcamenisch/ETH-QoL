{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",
	
	"developer": {
		"name": "Danny Camenisch",
		"url": "https://github.com/dcamenisch",
	},

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

	"content_scripts": [
		{
			"matches": [
				"*://video.ethz.ch/lectures/*"
			],
            "js": [ "video.js" ],
            "run_at": "document_end",
            "all_frames": true
		},
        {
            "matches": [
                "*://moodle-app2.let.ethz.ch/*"
            ],
            "js": [
                "moodle_login.js",
                "moodle_style.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "*://www.lehrbetrieb.ethz.ch/myStudies/login.view*",
                "*://www.lehrbetrieb.ethz.ch/myStudies/studLeistungsueberblick*",
                "*://www.lehrbetrieb.ethz.ch/myStudies/studSessionException.view*",
            ],
            "js": [
                "mystudies_grades.js",
                "mystudies_login.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "*://www.vvz.ethz.ch/*",
                "*://www.vorlesungen.ethz.ch/*"
            ],
            "js": [ "vvz_cr_links.js" ],
            "run_at": "document_end",
            "all_frames": true
        },
	],
	
	"action": {
        "default_popup": "popup.html",
		"default_title": "ETH QoL",
		"default_icon": {
		  "16": "images/toolbar-icon-16.png",
		  "19": "images/toolbar-icon-19.png",
		  "32": "images/toolbar-icon-32.png",
		  "38": "images/toolbar-icon-38.png",
		  "48": "images/toolbar-icon-48.png",
		  "72": "images/toolbar-icon-72.png",
		  "512": "images/toolbar-icon-512.png"
		},
	},
}
